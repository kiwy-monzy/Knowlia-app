{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "knowlia",
  "version": "1.1.2",
  "identifier": "com.knowlia.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:9401",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Knowlia",
        "center": true,
        "dragDropEnabled": true,
        "minWidth": 1200,
        "minHeight": 768,
        "resizable": true,
        "minimizable": true,
        "decorations": false,
        "shadow": false,
        "transparent": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "./assets/gdrive_data.json",
      "./assets/*",
      "./assets/user.png",
      "./assets/screenshot_examples/*",
      "./assets/ocr/*",
      "./assets/cer.pem",
      "./assets/key.pem"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERDQjcyRDY2MEU1M0QwOApSV1FJUGVWZzFuTExEUm4rK2V3eUNMLy9JU0JkQkxqQnBUVXdHbzdaM0w3THhaaTIyRERmeHFSNgo=",
      "endpoints": [
        "https://knowlia.site/app/latest.json",
        "https://knowlia.site/update"
      ]
    }
  }
}
