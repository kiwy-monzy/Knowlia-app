{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main", "avatar"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "cache:default",
    "core:tray:default",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "core:window:allow-minimize",
    "core:window:allow-get-all-windows",
    "core:window:default",
    "core:window:allow-maximize",
    "core:window:allow-unmaximize",
    "core:window:allow-toggle-maximize",
    "core:window:allow-internal-toggle-maximize",
    "core:window:allow-is-maximized",
    "core:window:allow-set-focus",
    "core:window:allow-is-focused",
    "core:window:allow-unminimize",
    "core:window:allow-start-dragging",
    "core:window:allow-set-title",
    "core:window:allow-set-size",
    "core:window:allow-set-position",
    "core:window:allow-show",
    "dialog:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "os:default",
    "store:default",
    "dialog:allow-ask",
    "dialog:allow-open",
    "dialog:allow-save",
    "websocket:default",
    "http:default",
    "stronghold:allow-create-client",
    "stronghold:allow-get-store-record",
    "stronghold:allow-initialize",
    "stronghold:allow-execute-procedure",
    "stronghold:allow-load-client",
    "stronghold:allow-save-secret",
    "stronghold:allow-save-store-record",
    "stronghold:allow-save",
    "opener:allow-open-path",
    "media:default",
    "opener:allow-reveal-item-in-dir",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "scope": {
        "allow": [
          { "path": "$APPDATA/**" },
          { "path": "$LOCALAPPDATA/Knowlia/users/**" },
          { "path": "$APPCONFIG/**" }
        ]
      }
    }
  ]
}
