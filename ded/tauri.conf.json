{
  "$schema": "https://schema.tauri.app/config/2",

  "productName": "Knowlia",
  "version": "1.1.2",
  "identifier": "com.knowlia",
"mainBinaryName": "knowlia",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Knowlia",
        "center": true,
        "dragDropEnabled": true,
        "minWidth": 1200,
        "minHeight": 850,
        "resizable": false,
        "minimizable": true,
        "decorations": false,
        "shadow": false,
        "transparent": false,
        "backgroundColor": "#1a1a1a",
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": [
      "./assets/gdrive_data.json",
      "./assets/*",
      "./assets/user.png",
      "./assets/screenshot_examples/*",
      "./assets/ocr/*",
      "./assets/cer.pem",
      "./assets/key.pem"
    ],
    "createUpdaterArtifacts": true
  },
"build": {
  
  "beforeDevCommand": "pnpm dev",
  "beforeBuildCommand": "pnpm build",
  "frontendDist": "../dist",
  "devUrl": "http://localhost:9401"
},


  "plugins": {
    "updater": {
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERDQjcyRDY2MEU1M0QwOApSV1FJUGVWZzFuTExEUm4rK2V3eUNMLy9JU0JkQkxqQnBUVXdHbzdaM0w3THhaaTIyRERmeHFSNgo=",
      "endpoints": [
        "https://knowlia.site/app/latest.json",
        "https://knowlia.site/update"
      ]
    }
  }
}
